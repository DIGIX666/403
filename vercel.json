{
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.7.1"
      }
    },
    "builds": [
      {
        "src": "composer.json",
        "use": "@vercel/php"
      }
    ],
    "routes": [
      { "src": "/", "dest": "/api/index.php"},
      { "src": "/api/(.*)", "dest": "/api/$1" }, 
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }